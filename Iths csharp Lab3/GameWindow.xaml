<Window x:Class="Iths_csharp_Lab3.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iths_csharp_Lab3"
        mc:Ignorable="d" FontSize="16" FontWeight="Bold" Background="LightCoral"
        Title="GameWindow" Height="450" Width="800">

    <Grid Margin="5" HorizontalAlignment="Center">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quizzy Trivia" Grid.Column="2" Grid.Row="1" FontSize="32" Width="200" Height="40"   Foreground="Cyan" />
        <Image Source="C:\Users\Angela\OneDrive\0 IT-höskolan\c#\Iths csharp Lab3\Iths csharp Lab3\bin\Debug\net7.0-windows\Questionmark.png"  Width="100" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2"/>
        <Button x:Name="Question" Content="Se fråga" Height="70" Width="150" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Margin="15" Click="Question_Click"/>
        <TextBox x:Name ="QuestionTB" Height="auto" Width="auto" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3"/>
        <Button x:Name="Answer1Button" Content="" Height="40" Width="170" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center"  Margin="10" Click="Answer1Button_Click"/>
        <Button x:Name="Answer2Button" Content="" Height="40" Width="170" Grid.Column="2" Grid.Row="6" VerticalAlignment="Center"  Margin="10" Click="Answer2Button_Click"/>
        <Button x:Name="Answer3Button" Content="" Height="40" Width="170" Grid.Column="2" Grid.Row="7" VerticalAlignment="Center"  Margin="10" Click="Answer3Button_Click"/>
        <Button x:Name="BackToMainWindow" Content="Back to main window" Height="40" Width="170" Grid.Column="3" Grid.Row="8" VerticalAlignment="Center"  Margin="10" Click="BackToMainWindow_Click"/>
        <ProgressBar x:Name="MadeQuestionProgressBar" Width="200" Height="20" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2"/>


    </Grid>

    
</Window>
